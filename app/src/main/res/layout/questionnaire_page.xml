<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.talproject.QuestionnairePage">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/logo"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/scroll"
    android:layout_below="@id/logo"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you weight under 50kg?  "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="@color/grey"
        android:textSize="22dp">
    </Switch>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="have you been pregnant/ in labor in the last 6 months?"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="22dp">
    </Switch>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you had a dental implant in the last three months?"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/grey"
        android:textSize="22dp">
    </Switch>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you/your partner have HIV? "
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="22dp">
    </Switch>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you using drugs?   "
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/grey"
        android:textSize="22dp">
    </Switch>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Did you do a tattoo/earring in the last 6 months?"
        android:layout_marginTop="20dp"
android:layout_marginLeft="10dp"
        android:textSize="22dp">
    </Switch>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you a diabetic/ epileptic/ have heart disease?"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/grey"
        android:textSize="22dp">
    </Switch>

</LinearLayout>
</ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Confirm and send"
        android:background="@drawable/gradient_button"
        android:layout_margin="20dp"
        android:id="@+id/fill_BTN_send"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        >
    </Button>




</RelativeLayout>