<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient_drawable">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errors"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/regular"
        android:layout_marginTop="15dp"
        android:text="חלק א' -פרטים אישיים:"
        android:textColor="@color/black"
        android:textStyle="bold"></TextView>


        <EditText
            android:id="@+id/questionnairePage_EDT_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="מספר תעודת זהות (מלא בלבד):"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
          />

        <EditText
            android:id="@+id/questionnairePage_EDT_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"

            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="שם פרטי:"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
           android:textSize="16dp"/>

        <EditText
            android:id="@+id/questionnairePage_EDT_family_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="שם משפחה:"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"

            android:textColor="@color/black"
            android:textColorHint="@color/black"
           android:textSize="16dp"></EditText>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
android:layout_gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"

            android:id="@+id/questionnairePage_EDT_gender"

            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זכר"
                            android:layout_margin="5dp"
android:fontFamily="@font/regular"

                android:textSize="16dp"
                android:textColor="@color/black"

                />

            <RadioButton android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="נקבה"
                            android:layout_margin="5dp"
android:fontFamily="@font/regular"

                android:textSize="16dp"

                />
        </RadioGroup>


        <EditText
            android:id="@+id/questionnairePage_EDT_dateBirth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            
            android:hint="תאריך לידה:"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textColor="@color/black"
            />



        <EditText
            android:id="@+id/questionnairePage_EDT_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="גיל:"
            android:layout_margin="5dp"
            android:fontFamily="@font/regular"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/questionnairePage_EDT_lastName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"

            android:hint="שם קודם
                    פרטי+משפחה:"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
           android:textSize="16dp"/>


        <EditText
            android:id="@+id/questionnairePage_EDT_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="עיר/ישוב:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_postal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="מיקוד:"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_street"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="רחוב ומס' בית"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint=":e-mail"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_mobilePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="טלפון נייד:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_OfficePhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="טלפון בעבודה:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_HomePhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="טלפון בבית:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_bloodDonationAgain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="מסכים לזימון לתרום דם
בעתיד: כן / לא"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:textColorHint="@color/black"
           android:textSize="16dp"/>

        <EditText
            android:id="@+id/questionnairePage_EDT_MotherCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
            android:hint="ארץ לידת אם:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"

            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_fatherCountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="ארץ לידת אב:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_yearImmigration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="שנת עליה/הגעה לישראל:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/questionnairePage_EDT_CountryBirth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_color"
            android:gravity="right"
                        android:layout_margin="5dp"
android:fontFamily="@font/regular"
            android:hint="ארץ לידה:"
            android:textColorHint="@color/black"
           android:textSize="16dp"
            android:textColor="@color/black"
            />


            <EditText
                android:id="@+id/questionnairePage_EDT_patientName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16dp"
                            android:layout_margin="5dp"
android:fontFamily="@font/regular"

                android:text="במידה שמעוניין לרשום לזכות:
\nעבור חולה, שם החולה:"                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>