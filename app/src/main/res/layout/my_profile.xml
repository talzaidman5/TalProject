<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project.MainPage"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/red"
        android:id="@+id/myProfile_top"
        >
        <ImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="20dp"
            android:id="@+id/myProfile_BTN_edit"
            android:layout_alignParentRight="true"
            android:background="@drawable/pencil"/>

        <ImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="20dp"
            android:id="@+id/myProfile_BTN_alerts"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bell"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/set"/>


        <Button
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/myProfile_BTN_logo"
            android:shape="ring"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/profile"
            tools:ignore="MissingClass" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_nameToFill"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:layout_below="@id/logo"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/scroll"
        android:layout_below="@id/myProfile_top"
        android:layout_above="@id/myProfile_BTN_back"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/myProfile_Linear2"
        android:layout_below="@+id/myProfile_Linear1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_ID"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="ID:"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_IDToFill"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/myProfile_TXT_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/myProfile_Linear3"
        android:layout_below="@+id/myProfile_Linear2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_email"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"

            android:textColor="@color/black"
            android:text="Email:"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_emailToFill"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/myProfile_TXT_email"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            >
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/myProfile_Linear5"
        android:layout_below="@+id/myProfile_Linear3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_phoneNumber"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:text="Phone Number:"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_phoneNumberToFill"
            android:layout_toRightOf="@+id/myProfile_TXT_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            >

        </EditText>

    </LinearLayout>

            <LinearLayout
                android:id="@+id/myProfile_Linear6"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myProfile_Linear5"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myProfile_TXT_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="Password:"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/myProfile_TXT_passwordToFill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:ems="30"
                    android:layout_toRightOf="@+id/myProfile_TXT_name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    ></EditText>


            </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/myProfile_Linear7"
        android:layout_below="@+id/myProfile_Linear6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_country"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"

            android:text="Country:"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_countryToFill"
            android:layout_toRightOf="@+id/myProfile_TXT_name"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/myProfile_Linear8"
        android:layout_below="@+id/myProfile_Linear7"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/myProfile_TXT_bloodType"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"

            android:text="Blood Type:"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_bloodTypeToFill"
            android:layout_toRightOf="@+id/myProfile_TXT_name"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/myProfile_Linear9"
        android:layout_below="@+id/myProfile_Linear8"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_dateBirth"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"

            android:text="Date Birth:"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myProfile_TXT_dateBirthToFill"
            android:layout_toRightOf="@+id/myProfile_TXT_dateBirth"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20dp"
          >
        </EditText>


    </LinearLayout>
        </LinearLayout>
    </ScrollView>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/myProfile_BTN_back"
    android:layout_alignParentRight="true"
    android:text="Backi">
</Button>
</RelativeLayout>