<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.project.SignUpPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/img"/>



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="10dp"
        tools:ignore="MissingClass" />
    <ScrollView
        android:background="@drawable/corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_above="@+id/signUp_BTN_signUp"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/first">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUp_TXT_title"
                android:text="User Profile"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/signUp_EDT_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:hint="Enter your name"
                android:layout_marginTop="10dp"
                />


            <EditText
                android:id="@+id/signUp_EDT_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/black"
                android:hint="Enter your id"
                android:layout_below="@+id/signUp_EDT_name"
                />

            <EditText
                android:id="@+id/signUp_EDT_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:hint="Enter your email"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/signUp_EDT_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:hint="Enter your phone number"
                android:layout_below="@+id/signUp_EDT_email"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/signUp_EDT_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="numberPassword"
                android:hint="Choose password"
                android:layout_below="@+id/signUp_EDT_phone"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/signUp_TXT_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose country"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/signUp_SPI_country"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                />


            <TextView
                android:id="@+id/signUp_TXT_blood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/signUp_LLA_city"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/signUp_SPI_bloodTypes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/signUp_TXT_birthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth Date"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/signUp_LLA_bloodType2"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Date "
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/signUp_TXT_birthDatePicker"/>



        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/signUp_BTN_signUp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="sign Up"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradient_button"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"/>
</RelativeLayout>