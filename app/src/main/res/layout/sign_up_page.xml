<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.project.SignUpPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/img"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sign_up_IMG_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="7dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profile" />
    <ScrollView
        android:background="@drawable/corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_IMG_logo"
        android:layout_above="@+id/signUp_BTN_signUp"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:id="@+id/first">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUp_TXT_title"
                android:text="פרטי משתמש:"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/signUp_EDT_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/grey"
                android:inputType="textPersonName|textCapSentences"
                android:hint="הכנס שם מלא"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />


            <EditText
                android:id="@+id/signUp_EDT_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:hint="הכנס מס' תעודת זהות"
                android:layout_below="@+id/signUp_EDT_name"
                />

            <EditText
                android:id="@+id/signUp_EDT_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:hint="הכנס כתובת מייל"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/grey"
                />

            <EditText
                android:id="@+id/signUp_EDT_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:hint="הכנס מספר טלפון"
                android:layout_below="@+id/signUp_EDT_email"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/signUp_EDT_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="numberPassword"
                android:hint="הכנס סיסמא"
                android:gravity="right"
                android:textColorHint="@color/grey"
                android:layout_below="@+id/signUp_EDT_phone"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/signUp_TXT_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בחר מדינה"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/signUp_SPI_country"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                />


            <TextView
                android:id="@+id/signUp_TXT_blood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="סוג דם"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/signUp_LLA_city"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/signUp_SPI_bloodTypes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/signUp_TXT_birthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תאריך לידה"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/signUp_LLA_bloodType2"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בחר תאריך לידה"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/signUp_TXT_birthDatePicker"/>
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/signUp_BTN_signUp"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="התחבר"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradient_button"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>